{% extends '@App/base.html.twig' %}
 {% block content %}
     <div class="container main">

         <div class="starter-template">
             <h1>Twój drink na dziś to:
                 <div>
                     <strong>
                         {{ drink.title }}
                     </strong>
                 </div>
             </h1>
             <img src="{{ drink.image }}"/>

             <p>
                 {{ drink.description }}
             </p>

             <div>
                 <button type="button" data-toggle="modal" data-target="#myModal" onclick="addLike();"
                         class="btn btn-default btn-lg btn-block">Idę w to!
                 </button>
             </div>
             <div>
                 <a href="{{ path('random') }}" class="btn btn-default btn-lg btn-block">Losuj coś innego</a>
             </div>
         </div>

     </div>

     <!-- Modal -->
     <div id="myModal" class="modal fade" role="dialog">
         <div class="modal-dialog">

             <!-- Modal content-->
             <div class="modal-content">
                 <div class="modal-header">
                     <button type="button" class="close" data-dismiss="modal">&times;</button>
                     <h4 class="modal-title">Co pijesz</h4>
                 </div>
                 <div class="modal-body">
                     <div class="content-modal">

                     <div>Cieszymy się, że pomogliśmy Ci w podjęciu tej ciężkiej decyzji</div>

                     <div>
                         <b>{{ drink.like + 1 }} ludzi</b> w Twojej okolicy najebią się tym samym.</div>

                     </div>
                 </div>
                 <div class="modal-footer">
                     <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button>
                 </div>
             </div>
         </div>
     </div>
     <script>
         alreadyLike = false;
         function addLike() {
             if (alreadyLike) {
                 $('.content-modal').html('Juz oceniłeś pijaku!')
             } else {
                 $.get("/like/{{ drink.id }}", function (data) {
                 });
             }

             alreadyLike = true;
         }
     </script>
 {% endblock %}
